<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pet_form" model="ir.ui.view">
        <field name="name">vet.pet.form</field>
        <field name="model">vet.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="species"/>
                        <field name="category_id" widget="many2one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pet_tree" model="ir.ui.view">
        <field name="name">vet.pet.tree</field>
        <field name="model">vet.pet</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                <field name="name"/>
                <field name="species"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <!-- Add menu and action for Pet Category -->
    <record id="action_pet_category" model="ir.actions.act_window">
        <field name="name">Pet Categories</field>
        <field name="res_model">vet.pet.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pet category
            </p>
        </field>
    </record>

    <menuitem id="menu_pet_category" 
              name="Pet Categories" 
              parent="menu_vet_main" 
              action="action_pet_category" 
              sequence="20"/>
</odoo>