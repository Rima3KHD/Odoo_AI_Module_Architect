<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pet_form" model="ir.ui.view">
        <field name="name">vet.pet.form</field>
        <field name="model">vet.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        
                        <field name="name"/>
                        
                        <field name="species"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pet_tree" model="ir.ui.view">
        <field name="name">vet.pet.tree</field>
        <field name="model">vet.pet</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                
                <field name="name"/>
                
                <field name="species"/>
                
            </list>
        </field>
    </record>

    <record id="action_pet" model="ir.actions.act_window">
        <field name="name">Pet</field>
        <field name="res_model">vet.pet</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pet"
              name="Pet"
              action="action_pet"/>
</odoo>