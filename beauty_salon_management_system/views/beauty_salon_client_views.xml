<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_client_form" model="ir.ui.view">
        <field name="name">beauty.salon.client.form</field>
        <field name="model">beauty.salon.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <header>
                    <button name="action_archive" type="object" string="Archive" states="active" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" states="archived" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="appointment_count" widget="statinfo" string="Appointments"/>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Client Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="many2one" context="{'default_company_type': 'person'}" options="{'no_create_edit': False}"/>
                            <field name="salon_id"/>
                            <field name="membership_status"/>
                        </group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contact Information">
                            <group>
                                <group>
                                    <field name="phone" readonly="1"/>
                                    <field name="email" readonly="1"/>
                                </group>
                                <group>
                                    <field name="address" readonly="1" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                        <page string="Appointments" attrs="{'invisible': [('appointment_count', '=', 0)]}">
                            <field name="appointment_ids">
                                <tree string="Appointments" editable="bottom">
                                    <field name="name"/>
                                    <field name="service_id"/>
                                    <field name="staff_id"/>
                                    <field name="appointment_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree/List View -->
    <record id="view_beauty_salon_client_tree" model="ir.ui.view">
        <field name="name">beauty.salon.client.tree</field>
        <field name="model">beauty.salon.client</field>
        <field name="arch" type="xml">
            <tree string="Clients" decoration-muted="active==False">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="phone" invisible="1"/>
                <field name="email" invisible="1"/>
                <field name="salon_id"/>
                <field name="membership_status"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_beauty_salon_client_search" model="ir.ui.view">
        <field name="name">beauty.salon.client.search</field>
        <field name="model">beauty.salon.client</field>
        <field name="arch" type="xml">
            <search string="Search Clients">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="salon_id"/>
                <field name="membership_status"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_salon" string="Salon" context="{'group_by': 'salon_id'}"/>
                    <filter name="group_by_membership" string="Membership" context="{'group_by': 'membership_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beauty_salon_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">beauty.salon.client</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first client
            </p>
        </field>
    </record>
</odoo>