<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_client_form" model="ir.ui.view">
        <field name="name">beauty_salon.client.form</field>
        <field name="model">beauty_salon.client</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_archive" type="object" string="Archive" states="active" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" states="archived" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Client Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contact Information">
                            <field name="address" nolabel="1"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_beauty_salon_client_tree" model="ir.ui.view">
        <field name="name">beauty_salon.client.tree</field>
        <field name="model">beauty_salon.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="active" invisible="1"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_beauty_salon_client_search" model="ir.ui.view">
        <field name="name">beauty_salon.client.search</field>
        <field name="model">beauty_salon.client</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beauty_salon_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">beauty_salon.client</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_beauty_salon_client_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_beauty_salon_clients" name="Clients" parent="menu_beauty_salon_main" sequence="10"/>
    <menuitem id="menu_beauty_salon_clients_action" name="All Clients" parent="menu_beauty_salon_clients" action="action_beauty_salon_client" sequence="10"/>
</odoo>