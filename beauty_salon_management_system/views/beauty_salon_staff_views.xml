<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_staff_form" model="ir.ui.view">
        <field name="name">beauty_salon.staff.form</field>
        <field name="model">beauty_salon.staff</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_archive" type="object" string="Archive" states="active" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" states="archived" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Staff Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="emergency_contact"/>
                        </group>
                        <group>
                            <field name="specialization"/>
                            <field name="hire_date"/>
                            <field name="job_title"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_beauty_salon_staff_tree" model="ir.ui.view">
        <field name="name">beauty_salon.staff.tree</field>
        <field name="model">beauty_salon.staff</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="emergency_contact"/>
                <field name="specialization"/>
                <field name="job_title"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_beauty_salon_staff_search" model="ir.ui.view">
        <field name="name">beauty_salon.staff.search</field>
        <field name="model">beauty_salon.staff</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="specialization"/>
                <filter name="active_staff" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive_staff" string="Inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_specialization" string="Specialization" context="{'group_by': 'specialization'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beauty_salon_staff" model="ir.actions.act_window">
        <field name="name">Salon Staff</field>
        <field name="res_model">beauty_salon.staff</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first staff member!
            </p>
        </field>
    </record>
</odoo>