<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_staff_form" model="ir.ui.view">
        <field name="name">beauty.salon.staff.form</field>
        <field name="model">beauty.salon.staff</field>
        <field name="arch" type="xml">
            <form string="Staff">
                <header>
                    <button name="action_archive" type="object" string="Archive" states="active" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" states="archived" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="appointment_count" widget="statinfo" string="Appointments"/>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Staff Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="emergency_contact"/>
                        </group>
                        <group>
                            <field name="specialization"/>
                            <field name="job_title"/>
                            <field name="hire_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="is_manager"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Assigned Salons">
                            <field name="salon_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="city"/>
                                    <field name="status"/>
                                    <field name="is_manager"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                        <page string="Appointments" attrs="{'invisible': [('id', '=', False)]}">
                            <field name="appointment_count" invisible="1"/>
                            <field name="appointment_ids" nolabel="1">
                                <tree>
                                    <field name="salon_id"/>
                                    <field name="client_id"/>
                                    <field name="service_id"/>
                                    <field name="appointment_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_beauty_salon_staff_tree" model="ir.ui.view">
        <field name="name">beauty.salon.staff.tree</field>
        <field name="model">beauty.salon.staff</field>
        <field name="arch" type="xml">
            <tree string="Staff" decoration-danger="active == False" decoration-warning="is_manager == True">
                <field name="name"/>
                <field name="job_title"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="is_manager"/>
                <field name="appointment_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_beauty_salon_staff_search" model="ir.ui.view">
        <field name="name">beauty.salon.staff.search</field>
        <field name="model">beauty.salon.staff</field>
        <field name="arch" type="xml">
            <search string="Search Staff">
                <field name="name"/>
                <field name="job_title"/>
                <field name="specialization"/>
                <filter string="Active" name="active" domain="[[('active', '=', True)]]"/>
                <filter string="Managers" name="managers" domain="[[('is_manager', '=', True)]]"/>
                <filter string="Hair Stylists" name="hair_stylists" domain="[[('specialization', '=', 'hair_stylist')]]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Specialization" name="group_specialization" context="{'group_by': 'specialization'}"/>
                    <filter string="Is Manager" name="group_manager" context="{'group_by': 'is_manager'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Staff Action -->
    <record id="action_beauty_salon_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">beauty.salon.staff</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage your beauty salon staff here.
            </p>
            <p>
                Create staff records, assign specializations, and manage their assignments to different salons.
            </p>
        </field>
    </record>
    
</odoo>