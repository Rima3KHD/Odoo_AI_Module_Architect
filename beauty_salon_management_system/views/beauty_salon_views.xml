<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Salon Form View -->
        <record id="view_beauty_salon_form" model="ir.ui.view">
            <field name="name">beauty.salon.form</field>
            <field name="model">beauty.salon</field>
            <field name="arch" type="xml">
                <form string="Beauty Salon">
                    <header>
                        <button name="action_open" type="object" string="Open" class="btn-primary" states="closed,temporary_closed,maintenance"/>
                        <button name="action_close" type="object" string="Close" states="open"/>
                        <button name="action_maintenance" type="object" string="Maintenance" states="open"/>
                        <field name="status" widget="statusbar" statusbar_visible="open,closed,maintenance,temporary_closed" class="oe_inline"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_staff" type="object" class="oe_stat_button" icon="fa-users">
                                <div class="o_stat_info">
                                    <field name="staff_count" widget="statinfo" string="Staff"/>
                                </div>
                            </button>
                            <button name="action_view_clients" type="object" class="oe_stat_button" icon="fa-user">
                                <div class="o_stat_info">
                                    <field name="client_count" widget="statinfo" string="Clients"/>
                                </div>
                            </button>
                            <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="appointment_count" widget="statinfo" string="Appointments"/>
                                </div>
                            </button>
                            <button name="action_view_services" type="object" class="oe_stat_button" icon="fa-scissors">
                                <div class="o_stat_info">
                                    <field name="service_count" widget="statinfo" string="Services"/>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Salon Name"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="SALON-001"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="manager_id" widget="many2one" options="{'no_create': True}"/>
                                <field name="capacity"/>
                                <field name="status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contact Information">
                                <group>
                                    <group>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="website"/>
                                    </group>
                                    <group>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="country_id"/>
                                        <field name="zip"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Operations">
                                <group>
                                    <group>
                                        <field name="opening_time" widget="float_time"/>
                                        <field name="closing_time" widget="float_time"/>
                                    </group>
                                    <group>
                                        <field name="description" nolabel="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Staff">
                                <field name="staff_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="specialization"/>
                                        <field name="is_manager"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Services">
                                <field name="service_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="category"/>
                                        <field name="duration"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Related Records" attrs="{'invisible': [('id', '=', False)]}">
                                <field name="client_ids" nolabel="1" context="{'default_salon_id': active_id}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="membership_status"/>
                                    </tree>
                                </field>
                                <field name="appointment_ids" nolabel="1" context="{'default_salon_id': active_id}">
                                    <tree>
                                        <field name="client_id"/>
                                        <field name="service_id"/>
                                        <field name="staff_id"/>
                                        <field name="appointment_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Salon Tree View -->
        <record id="view_beauty_salon_tree" model="ir.ui.view">
            <field name="name">beauty.salon.tree</field>
            <field name="model">beauty.salon</field>
            <field name="arch" type="xml">
                <tree string="Beauty Salons" decoration-danger="status == 'closed'" decoration-warning="status == 'maintenance'" decoration-muted="status == 'temporary_closed'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="status"/>
                    <field name="capacity"/>
                    <field name="staff_count"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Salon Kanban View -->
        <record id="view_beauty_salon_kanban" model="ir.ui.view">
            <field name="name">beauty.salon.kanban</field>
            <field name="model">beauty.salon</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="image"/>
                    <field name="status"/>
                    <field name="staff_count"/>
                    <field name="client_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('beauty.salon', 'image', record.id.raw_value)" alt="Salon Image" class="o_kanban_image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-map-marker"/>
                                        <field name="city"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-phone"/>
                                        <field name="phone"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="status" widget="label_selection" class="oe_kanban_status"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <i class="fa fa-users"/>
                                        <field name="staff_count"/>
                                        <i class="fa fa-user ml-2"/>
                                        <field name="client_count"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Salon Search View -->
        <record id="view_beauty_salon_search" model="ir.ui.view">
            <field name="name">beauty.salon.search</field>
            <field name="model">beauty.salon</field>
            <field name="arch" type="xml">
                <search string="Search Salons">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="city"/>
                    <field name="status"/>
                    <filter string="Active" name="active" domain="[[('active', '=', True)]]"/>
                    <filter string="Open" name="open" domain="[[('status', '=', 'open')]]"/>
                    <filter string="Closed" name="closed" domain="[[('status', '=', 'closed')]]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Salon Action -->
        <record id="action_beauty_salon" model="ir.actions.act_window">
            <field name="name">Beauty Salons</field>
            <field name="res_model">beauty.salon</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Manage your beauty salon branches here.
                </p>
                <p>
                    Create multiple salon locations, assign staff, and manage services for each location.
                </p>
            </field>
        </record>
        
        <!-- Form View Action (for related records) -->
        <record id="action_beauty_salon_form" model="ir.actions.act_window">
            <field name="name">Beauty Salon</field>
            <field name="res_model">beauty.salon</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>
        
    </data>
</odoo>