<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_appointment_form" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.form</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_start" type="object" string="Start" states="confirmed" class="oe_highlight"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirmed" class="btn-danger"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="cancelled" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" required="1"/>
                            <field name="service_id" required="1"/>
                            <field name="staff_id" required="1"/>
                        </group>
                        <group>
                            <field name="appointment_date" required="1"/>
                            <field name="duration" required="1"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', '!=', 'cancelled')]}">
                        <group>
                            <field name="reason_for_cancel" placeholder="Enter reason for cancellation..." nolabel="1" attrs="{'readonly': [('state', '!=', 'cancelled')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_beauty_salon_appointment_tree" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.tree</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
                <field name="reason_for_cancel" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_beauty_salon_appointment_search" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.search</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="state"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beauty_salon_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">beauty_salon.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments yet. Create your first appointment!
            </p>
        </field>
    </record>

    <!-- Menu Item (already defined in beauty_salon_menus.xml) -->

</odoo>