<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_appointment_form" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.form</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_start" type="object" string="Start" states="confirmed" class="oe_highlight"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirmed" class="btn-danger"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="cancelled" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed,cancelled" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" invisible="1"/>
                            Appointment
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="service_id" options="{'no_create': True}"/>
                            <field name="staff_id" domain="[('active', '=', True)]" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="appointment_date"/>
                            <field name="duration"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                        <page string="Additional Information">
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_beauty_salon_appointment_tree" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.tree</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'completed'" decoration-warning="state == 'in_progress'" decoration-danger="state == 'cancelled'" decoration-info="state == 'confirmed'">
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="appointment_date"/>
                <field name="duration"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_beauty_salon_appointment_calendar" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.calendar</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <calendar date_start="appointment_date" date_stop="end_date" color="staff_id" string="Appointments" mode="week">
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_beauty_salon_appointment_search" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.search</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="state"/>
                <filter name="today" string="Today" domain="[('appointment_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('appointment_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter name="this_week" string="This Week" domain="[('appointment_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('appointment_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_client" string="Client" context="{'group_by': 'client_id'}"/>
                    <filter name="group_by_staff" string="Staff" context="{'group_by': 'staff_id'}"/>
                    <filter name="group_by_service" string="Service" context="{'group_by': 'service_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beauty_salon_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">beauty_salon.appointment</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="search_view_id" ref="view_beauty_salon_appointment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first appointment
            </p>
        </field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_beauty_salon_appointments" name="Appointments" parent="menu_beauty_salon_main" sequence="40"/>
    <menuitem id="menu_beauty_salon_appointments_action" name="All Appointments" parent="menu_beauty_salon_appointments" action="action_beauty_salon_appointment" sequence="10"/>
</odoo>