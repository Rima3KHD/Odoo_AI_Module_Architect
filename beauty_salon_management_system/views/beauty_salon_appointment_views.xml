<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_appointment_form" model="ir.ui.view">
        <field name="name">beauty.salon.appointment.form</field>
        <field name="model">beauty.salon.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_start" type="object" string="Start" states="confirmed" class="oe_highlight"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirmed" class="btn-danger"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="cancelled" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed,cancelled" class="oe_inline"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="state"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="salon_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="client_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="service_id" widget="many2one" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="staff_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="appointment_date"/>
                            <field name="duration"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', '!=', 'cancelled')]}" string="Cancellation Details">
                        <field name="reason_for_cancel" placeholder="Enter reason for cancellation..." nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_beauty_salon_appointment_tree" model="ir.ui.view">
        <field name="name">beauty.salon.appointment.tree</field>
        <field name="model">beauty.salon.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments" decoration-danger="state == 'cancelled'" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'">
                <field name="name"/>
                <field name="salon_id"/>
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
                <field name="reason_for_cancel" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_beauty_salon_appointment_search" model="ir.ui.view">
        <field name="name">beauty.salon.appointment.search</field>
        <field name="model">beauty.salon.appointment</field>
        <field name="arch" type="xml">
            <search string="Search Appointments">
                <field name="name"/>
                <field name="client_id"/>
                <field name="service_id"/>
                <field name="staff_id"/>
                <field name="salon_id"/>
                <field name="state"/>
                <filter string="Today" name="today" domain="[[('appointment_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('appointment_date', '<=', context_today().strftime('%Y-%m-%d 23:59:59'))]]"/>
                <filter string="Upcoming" name="upcoming" domain="[[('appointment_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('state', 'in', ['draft', 'confirmed'])]]"/>
                <filter string="Completed" name="completed" domain="[[('state', '=', 'completed')]]"/>
                <filter string="Cancelled" name="cancelled" domain="[[('state', '=', 'cancelled')]]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Salon" name="group_salon" context="{'group_by': 'salon_id'}"/>
                    <filter string="Staff" name="group_staff" context="{'group_by': 'staff_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Appointment Action -->
    <record id="action_beauty_salon_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">beauty.salon.appointment</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule and manage beauty salon appointments here.
            </p>
            <p>
                Create new appointments, assign staff, and track appointment status.
            </p>
        </field>
    </record>
    
    <!-- Calendar View -->
    <record id="view_beauty_salon_appointment_calendar" model="ir.ui.view">
        <field name="name">beauty.salon.appointment.calendar</field>
        <field name="model">beauty.salon.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="appointment_date" date_stop="end_date" color="staff_id" mode="week">
                <field name="name"/>
                <field name="client_id"/>
                <field name="salon_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
</odoo>