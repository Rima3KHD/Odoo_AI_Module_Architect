<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_beauty_salon_service_form" model="ir.ui.view">
        <field name="name">beauty.salon.service.form</field>
        <field name="model">beauty.salon.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <header>
                    <button name="action_archive" type="object" string="Archive" states="active" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" states="archived" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="appointment_count" widget="statinfo" string="Appointments"/>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="duration"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Available at Salons">
                            <field name="salon_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="city"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Appointments" attrs="{'invisible': [('id', '=', False)]}">
                            <field name="appointment_count" invisible="1"/>
                            <field name="appointment_ids" nolabel="1">
                                <tree>
                                    <field name="salon_id"/>
                                    <field name="client_id"/>
                                    <field name="staff_id"/>
                                    <field name="appointment_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_beauty_salon_service_tree" model="ir.ui.view">
        <field name="name">beauty.salon.service.tree</field>
        <field name="model">beauty.salon.service</field>
        <field name="arch" type="xml">
            <tree string="Services" decoration-danger="active == False">
                <field name="name"/>
                <field name="category"/>
                <field name="duration"/>
                <field name="price"/>
                <field name="appointment_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_beauty_salon_service_search" model="ir.ui.view">
        <field name="name">beauty.salon.service.search</field>
        <field name="model">beauty.salon.service</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="category"/>
                <filter string="Active" name="active" domain="[[('active', '=', True)]]"/>
                <filter string="Hair Services" name="hair" domain="[[('category', '=', 'hair')]]"/>
                <filter string="Nail Services" name="nails" domain="[[('category', '=', 'nails')]]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Service Action -->
    <record id="action_beauty_salon_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">beauty.salon.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage your beauty salon services here.
            </p>
            <p>
                Create service catalog, set prices and durations, and assign to specific salons.
            </p>
        </field>
    </record>
    
</odoo>