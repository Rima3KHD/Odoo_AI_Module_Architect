<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_beauty_salon_staff_form" model="ir.ui.view">
        <field name="name">beauty_salon.staff.form</field>
        <field name="model">beauty_salon.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        
                        <field name="name"/>
                        
                        <field name="specialization"/>
                        
                        <field name="phone"/>
                        
                        <field name="email"/>
                        
                        <field name="active"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beauty_salon_staff_tree" model="ir.ui.view">
        <field name="name">beauty_salon.staff.tree</field>
        <field name="model">beauty_salon.staff</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                
                <field name="name"/>
                
                <field name="specialization"/>
                
                <field name="phone"/>
                
                <field name="email"/>
                
                <field name="active"/>
                
            </list>
        </field>
    </record>

    <record id="action_beauty_salon_staff" model="ir.actions.act_window">
        <field name="name">Beauty Salon Staff</field>
        <field name="res_model">beauty_salon.staff</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_beauty_salon_staff"
              name="Beauty Salon Staff"
              action="action_beauty_salon_staff"/>
</odoo>