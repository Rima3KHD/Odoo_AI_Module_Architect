<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_beauty_salon_appointment_form" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.form</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        
                        <field name="client_id"/>
                        
                        <field name="service_id"/>
                        
                        <field name="staff_id"/>
                        
                        <field name="appointment_date"/>
                        
                        <field name="duration"/>
                        
                        <field name="notes"/>
                        
                        <field name="state"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beauty_salon_appointment_tree" model="ir.ui.view">
        <field name="name">beauty_salon.appointment.tree</field>
        <field name="model">beauty_salon.appointment</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                
                <field name="client_id"/>
                
                <field name="service_id"/>
                
                <field name="staff_id"/>
                
                <field name="appointment_date"/>
                
                <field name="duration"/>
                
                <field name="notes"/>
                
                <field name="state"/>
                
            </list>
        </field>
    </record>

    <record id="action_beauty_salon_appointment" model="ir.actions.act_window">
        <field name="name">Beauty Salon Appointment</field>
        <field name="res_model">beauty_salon.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_beauty_salon_appointment"
              name="Beauty Salon Appointment"
              action="action_beauty_salon_appointment"/>
</odoo>