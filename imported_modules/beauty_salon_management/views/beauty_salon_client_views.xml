<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_beauty_salon_client_form" model="ir.ui.view">
        <field name="name">beauty_salon.client.form</field>
        <field name="model">beauty_salon.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        
                        <field name="name"/>
                        
                        <field name="phone"/>
                        
                        <field name="email"/>
                        
                        <field name="birth_date"/>
                        
                        <field name="notes"/>
                        
                        <field name="allergies"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beauty_salon_client_tree" model="ir.ui.view">
        <field name="name">beauty_salon.client.tree</field>
        <field name="model">beauty_salon.client</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                
                <field name="name"/>
                
                <field name="phone"/>
                
                <field name="email"/>
                
                <field name="birth_date"/>
                
                <field name="notes"/>
                
                <field name="allergies"/>
                
            </list>
        </field>
    </record>

    <record id="action_beauty_salon_client" model="ir.actions.act_window">
        <field name="name">Beauty Salon Client</field>
        <field name="res_model">beauty_salon.client</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_beauty_salon_client"
              name="Beauty Salon Client"
              action="action_beauty_salon_client"/>
</odoo>