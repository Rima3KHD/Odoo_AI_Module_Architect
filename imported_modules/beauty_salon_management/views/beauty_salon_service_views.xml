<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_beauty_salon_service_form" model="ir.ui.view">
        <field name="name">beauty_salon.service.form</field>
        <field name="model">beauty_salon.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        
                        <field name="name"/>
                        
                        <field name="category"/>
                        
                        <field name="duration"/>
                        
                        <field name="price"/>
                        
                        <field name="description"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beauty_salon_service_tree" model="ir.ui.view">
        <field name="name">beauty_salon.service.tree</field>
        <field name="model">beauty_salon.service</field>
        <field name="arch" type="xml">
            <list> <!-- Odoo 18 uses list instead of tree -->
                
                <field name="name"/>
                
                <field name="category"/>
                
                <field name="duration"/>
                
                <field name="price"/>
                
                <field name="description"/>
                
            </list>
        </field>
    </record>

    <record id="action_beauty_salon_service" model="ir.actions.act_window">
        <field name="name">Beauty Salon Service</field>
        <field name="res_model">beauty_salon.service</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_beauty_salon_service"
              name="Beauty Salon Service"
              action="action_beauty_salon_service"/>
</odoo>